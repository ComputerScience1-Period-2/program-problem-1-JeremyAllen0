Display Text
Display name period and hello world with period being a variable*/
#include <iostream>
#include <conio.h>

using namespace std;

	void pause() {
	cout << "Press any key to continue . . .";
	while (!_kbhit());
	cout << '\n';
}
void main() {
	cout << "Hello World! " << "Jeremy " << "Allen " << "Period ";
	char Period = ' 2';
	cout << Period << endl;
	pause();
	return;
}